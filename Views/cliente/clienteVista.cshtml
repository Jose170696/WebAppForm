@model Cliente;

<div class="targaryen-theme">
    <h1>Agregar Cliente</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="image-container">
        <img src="ruta_de_tu_imagen.jpg" alt="Targaryen Logo" class="targaryen-logo">
    </div>

    <form asp-action="Submit" method="post">
        <div>
            <label>Nombre:</label>
            <input asp-for="Nombre" class="form-control targaryen-input" />
        </div>
        <div>
            <label>Correo:</label>
            <input asp-for="Email" class="form-control targaryen-input" />
        </div>
        <div>
            <label>Teléfono:</label>
            <input asp-for="Telefono" class="form-control targaryen-input" />
        </div>
        <div>
            <label>Dirección:</label>
            <input asp-for="Direccion" class="form-control targaryen-input" />
        </div>
        <div>
            <label>Adicionado Por:</label>
            <input asp-for="AdicionadoPor" class="form-control targaryen-input" />
        </div>

        <button type="submit" class="targaryen-btn">🔥 Guardar Cliente 🔥</button>
    </form>
</div>

<style>
    .targaryen-theme {
        text-align: center;
        background-color: black;
        color: #ff4500;
        padding: 50px;
        border-radius: 10px;
    }

    h1 {
        font-family: 'Garamond', serif;
        font-size: 2.5rem;
        color: red;
        text-shadow: 2px 2px 4px rgba(255, 0, 0, 0.6);
    }

    .image-container {
        display: flex;
        justify-content: center;
        margin: 20px 0;
    }

    .targaryen-logo {
        width: 200px;
        height: auto;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(255, 0, 0, 0.7);
    }

    .targaryen-input {
        background-color: #222;
        color: white;
        border: 2px solid red;
        padding: 10px;
        width: 100%;
        border-radius: 5px;
        margin-bottom: 10px;
    }

    .targaryen-btn {
        display: inline-block;
        margin: 10px;
        padding: 15px 25px;
        font-size: 1.2rem;
        font-weight: bold;
        color: white;
        background-color: red;
        border: 2px solid #ff4500;
        border-radius: 5px;
        text-decoration: none;
        transition: 0.3s;
    }

        .targaryen-btn:hover {
            background-color: #ff4500;
            border-color: gold;
        }
</style>